<UserControl x:Class="Actual_windows_phone_controller.PopupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel x:Name="LayoutRoot"  Width="480" Height="480" Background="Black">
        <TextBlock Text="Enter A Keybinding:" />
        <TextBlock Text="    Separate keys with '+'" />
        <TextBlock Text="    Example:" />
        <TextBlock Text="        CTRL+SHIFT+ALT+A" />

        <TextBox x:Name="tbx"/>
        <Button x:Name="btnOK" Content="OK"/>
        <Button x:Name="btnCancel" Content="Cancel"/>
    </StackPanel>
</UserControl>